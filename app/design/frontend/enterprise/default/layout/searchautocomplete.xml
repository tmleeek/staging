<layout version="0.1.0">
    <default>
<!--        <reference name="top.search">            
            <action method="setTemplate" ifconfig="mageworx_tweaks/searchautocomplete/enabled"><template>searchautocomplete/form.mini.phtml</template></action>            
        </reference>-->
        
        <reference name="before_body_end">
            <block type="core/template" name="searchautocomplete_search_wrapper" template="searchautocomplete/search_wrapper.phtml" ifconfig="mageworx_tweaks/searchautocomplete/enabled" />
        </reference>
        
        <reference name="head">
            <action method="addCss" ifconfig="mageworx_tweaks/searchautocomplete/enabled"><stylesheet>css/mageworx/searchautocomplete.css</stylesheet></action>
            <action method="addJs" ifconfig="mageworx_tweaks/searchautocomplete/enabled"><script>mageworx/searchautocomplete.js</script></action>
        </reference>
    </default>
    
    <catalogsearch_result_index>
        <reference name="content">
            <remove name="search.result" />
            <block type="searchautocomplete/result" name="searchautocomplete.result" template="searchautocomplete/result.phtml">
                <block type="catalog/product_list" name="search_result_list" template="catalog/product/list.phtml">
                    <block type="catalog/product_list_toolbar" name="product_list_toolbar" template="catalog/product/list/toolbar.phtml">
                        <block type="page/html_pager" name="product_list_toolbar_pager"/>
                    </block>
                    <action method="addColumnCountLayoutDepend">
                        <layout>empty</layout>
                        <count>6</count>
                    </action>
                    <action method="addColumnCountLayoutDepend">
                        <layout>one_column</layout>
                        <count>5</count>
                    </action>
                    <action method="addColumnCountLayoutDepend">
                        <layout>two_columns_left</layout>
                        <count>4</count>
                    </action>
                    <action method="addColumnCountLayoutDepend">
                        <layout>two_columns_right</layout>
                        <count>4</count>
                    </action>
                    <action method="addColumnCountLayoutDepend">
                        <layout>three_columns</layout>
                        <count>3</count>
                    </action>
                    <action method="setToolbarBlockName">
                        <name>product_list_toolbar</name>
                    </action>
                </block>
                <action method="setListOrders"/>
                <action method="setListModes"/> 
                <action method="setListCollection"/>
            </block>
        </reference>
    </catalogsearch_result_index>
</layout>