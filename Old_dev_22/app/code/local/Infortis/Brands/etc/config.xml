<config>
    <modules>
        <Infortis_Brands>
            <version>1.0.0</version>
        </Infortis_Brands>
    </modules>
    <frontend>
        <layout>
            <updates>
                <brands>
                    <file>infortis_brands.xml</file>
                </brands>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <brands>
                <class>Infortis_Brands_Model</class>
            </brands>
        </models>
        <blocks>
            <brands>
                <class>Infortis_Brands_Block</class>
            </brands>
        </blocks>
        <helpers>
            <brands>
                <class>Infortis_Brands_Helper</class>
            </brands>
        </helpers>
    </global>
	<default>
		<brands>
			<general>
				<attr_id>manufacturer</attr_id>
				<image_extension>png</image_extension>
				<link_search_enabled>1</link_search_enabled>
				<page_base_path></page_base_path>
				<append_category_suffix>0</append_category_suffix>
			</general>
			<product_view>
				<enable>1</enable>
				<show_image>1</show_image>
			</product_view>
			<slider>
				<all_brands>1</all_brands>
				<timeout></timeout>
                <speed>200</speed>
                <auto_speed>500</auto_speed>
				<pause>1</pause>
				<loop>1</loop>
                <lazy>1</lazy>
			</slider>
		</brands>
	</default>
</config>