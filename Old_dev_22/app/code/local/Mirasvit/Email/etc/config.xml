<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Mirasvit_Email>
            <version>1.0.1.1</version>
        </Mirasvit_Email>
    </modules>
    <global>
        <models>
            <email>
                <class>Mirasvit_Email_Model</class>
                <resourceModel>email_resource</resourceModel>
            </email>

            <email_resource>
                <class>Mirasvit_Email_Model_Resource</class>
                <entities>
                    <trigger>
                        <table>m_email_trigger</table>
                    </trigger>
                    <trigger_chain>
                        <table>m_email_trigger_chain</table>
                    </trigger_chain>
                    <queue>
                        <table>m_email_queue</table>
                    </queue>
                    <rule>
                        <table>m_email_rule</table>
                    </rule>
                    <event>
                        <table>m_email_event</table>
                    </event>
                    <event_trigger>
                        <table>m_email_event_trigger</table>
                    </event_trigger>
                </entities>
            </email_resource>
        </models>
        <helpers>
            <email>
                <class>Mirasvit_Email_Helper</class>
            </email>
        </helpers>
        <resources>
            <email_setup>
                <setup>
                    <module>Mirasvit_Email</module>
                </setup>
            </email_setup>
        </resources>
        <blocks>
            <email>
                <class>Mirasvit_Email_Block</class>
            </email>
        </blocks>
        <events>
            <wishlist_add_product>
                <observers>
                    <email>
                        <type>singleton</type>
                        <class>email/observer</class>
                        <method>onWishlistProductAdd</method>
                    </email>
                </observers>
            </wishlist_add_product>
            <wishlist_share>
                <observers>
                    <email>
                        <type>singleton</type>
                        <class>email/observer</class>
                        <method>onWishlistShared</method>
                    </email>
                </observers>
            </wishlist_share>
        </events>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <email module="email">
                    <file>mirasvit_email.xml</file>
                </email>
            </updates>
        </layout>
        <acl>
            <all>
                <title>Allow Everything</title>
            </all>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <email translate="title" module="email">
                                            <title>Trigger Email Suite</title>
                                        </email>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <frontend>
        <routers>
            <m_email>
                <use>standard</use>
                <args>
                    <module>Mirasvit_Email</module>
                    <frontName>eml</frontName>
                </args>
            </m_email>
        </routers>
        <layout>
            <updates>
                <email>
                    <file>email.xml</file>
                </email>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <email>
                <use>admin</use>
                <args>
                    <module>Mirasvit_Email</module>
                    <frontName>email</frontName>
                </args>
            </email>
        </routers>
    </admin>
    <crontab>
        <jobs>
            <email_send_queue>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>email/observer::sendQueue</model>
                </run>
            </email_send_queue>
            <email_check_events>
                <schedule>
                    <cron_expr>* * * * *</cron_expr>
                </schedule>
                <run>
                    <model>email/observer::checkEvents</model>
                </run>
            </email_check_events>
        </jobs>
    </crontab>
</config>